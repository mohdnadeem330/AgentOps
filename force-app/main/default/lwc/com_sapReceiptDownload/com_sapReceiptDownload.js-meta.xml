<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>60.0</apiVersion>
  <isExposed>true</isExposed>
  <masterLabel>com_sapReceiptDownload</masterLabel>
  <description>Preview or auto-download a PDF from a Base64 Flow variable.</description>

  <targets>
        <target>lightning__FlowScreen</target>
  </targets>

  <targetConfigs>
    <targetConfig targets="lightning__FlowScreen">
      <property name="base64Pdf" type="String" label="Base64 PDF" required="true"/>
      <property name="fileName" type="String" label="File Name (optional)"/>
      <property name="autoDownload" type="Boolean" label="Auto Download?"/>

      <property name="recordId" type="String" label="Record Id"/>
      <property name="done" type="String" label="Done"/>
    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>