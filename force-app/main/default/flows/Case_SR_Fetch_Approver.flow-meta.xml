<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>Set_Output_Variables</name>
        <label>Set Output Variables</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>Approver</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Fetch_Approval_Step.Approver__c</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>ApprovalWorkflowType</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Fetch_SR_Master.Approval_Workflow_Type__c</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>TotalApprovalSteps</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Fetch_SR_Master.Approval_Steps__c</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Get_The_SR_Approval_Status</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>If_Pending</name>
        <label>If Pending ?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>No</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_The_SR_Approval_Status.ECSS_Approval_Status__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Pending</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Approver</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Case_Status</targetReference>
            </connector>
            <label>No</label>
        </rules>
    </decisions>
    <description>Autolaunched flow to fetch the Service Request approvers dynamically based on the Approval Step records</description>
    <environments>Default</environments>
    <interviewLabel>Case - SR - Fetch Approver {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Case - SR - Fetch Approver</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>Fetch_Approval_Step</name>
        <label>Fetch Approval Step</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Set_Output_Variables</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>SR_Master__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>Fetch_SR_Master.Id</elementReference>
            </value>
        </filters>
        <filters>
            <field>Step_Number__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>ApprovalStepNumber</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>RETL_SR_Approval_Levels__c</object>
        <queriedFields>Id</queriedFields>
        <queriedFields>Approver__c</queriedFields>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordLookups>
        <name>Fetch_SR_Master</name>
        <label>Fetch SR Master</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Fetch_Approval_Step</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>RETL_Category__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>SR_Category</elementReference>
            </value>
        </filters>
        <filters>
            <field>RETL_Sub_Category__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>SR_SubCategory</elementReference>
            </value>
        </filters>
        <filters>
            <field>RETL_Service_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>SR_ServiceType</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>RETL_SR_Master__c</object>
        <queriedFields>Id</queriedFields>
        <queriedFields>Approval_Workflow_Type__c</queriedFields>
        <queriedFields>Approval_Steps__c</queriedFields>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordLookups>
        <name>Get_The_SR_Approval_Status</name>
        <label>Get The SR Approval Status</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>If_Pending</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>caseId</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>Case</object>
        <queriedFields>Id</queriedFields>
        <queriedFields>ECSS_Approval_Status__c</queriedFields>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <name>Update_Case_Status</name>
        <label>Update Case Approval Status</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <filterLogic>1 AND (2 OR 3)</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>caseId</elementReference>
            </value>
        </filters>
        <filters>
            <field>RETL_SR_Category__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>NOC</stringValue>
            </value>
        </filters>
        <filters>
            <field>RETL_SR_Category__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Work Permit</stringValue>
            </value>
        </filters>
        <inputAssignments>
            <field>ECSS_Approval_Status__c</field>
            <value>
                <stringValue>Pending</stringValue>
            </value>
        </inputAssignments>
        <object>Case</object>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Fetch_SR_Master</targetReference>
        </connector>
    </start>
    <status>Draft</status>
