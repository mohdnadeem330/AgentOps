    <formulas>
        <name>CanEditFlag</name>
        <dataType>Boolean</dataType>
        <expression>OR(
  AND(
    NOT(ISBLANK({!Get_Person_Account.Id})),
    {!Get_Person_Account.Blacklisted__c} &lt;&gt; {!InputFlagged},
    {!Get_Person_Account.Blacklisted__c} = TRUE,
    {!InputFlagged} = FALSE,
    OR(
      {!InputFlaggedReason} = &quot;Default&quot;,
      ISBLANK(TEXT({!Get_Person_Account.BlacklistReason__c})),
      ISBLANK({!InputFlaggedReason}),
      TRIM({!InputFlaggedReason}) = &quot;&quot;
    )
  ),

  AND(
    NOT(ISBLANK({!Get_Person_Account.Id})),
    TEXT({!Get_Person_Account.BlacklistReason__c}) &lt;&gt; {!InputFlaggedReason},
    TEXT({!Get_Person_Account.BlacklistReason__c}) = &quot;Default&quot;,
    OR(
      ISBLANK({!InputFlaggedReason}),
      TRIM({!InputFlaggedReason}) = &quot;&quot;,
      {!InputFlaggedReason} = &quot;Default&quot;
    )
  )
)</expression>
    </formulas>
