<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>To enable or disable Partner Account( Disable all related Contact User)</description>
    <environments>Default</environments>
    <formulas>
        <description>Formula field if Account AgencyStatus = Inactive or Closed then &quot;In Active&quot; else &quot;Active&quot;</description>
        <name>ContactAgencyStatus</name>
        <dataType>String</dataType>
        <expression>IF( 
   OR(    
           ISPICKVAL({!$Record.AgencyStatus__c}, &apos;In Active&apos;),
            ISPICKVAL({!$Record.AgencyStatus__c}, &apos;Closed&apos;)
         ),
&apos;In Active&apos;, 
TEXT({!$Record.AgencyStatus__c})
)</expression>
    </formulas>
    <interviewLabel>Enable/Disable Partner Account {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Enable/Disable Partner Account</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>UpdateContactsAgentStatus</name>
        <label>Update Contacts Agent Status</label>
        <locationX>587</locationX>
        <locationY>418</locationY>
        <connector>
            <targetReference>UpdateSendEmailFieldInAccount</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>AccountId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>AgentStatus__c</field>
            <value>
                <elementReference>ContactAgencyStatus</elementReference>
            </value>
        </inputAssignments>
        <object>Contact</object>
    </recordUpdates>
    <recordUpdates>
        <name>UpdateSendEmailFieldInAccount</name>
        <label>Update Send Email Field In Account</label>
        <locationX>590</locationX>
        <locationY>564</locationY>
        <inputAssignments>
            <field>SendEmail__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>458</locationX>
        <locationY>48</locationY>
        <filterLogic>(1 OR 2 OR 5) AND 3 AND 4</filterLogic>
        <filters>
            <field>AgencyStatus__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Active</stringValue>
            </value>
        </filters>
        <filters>
            <field>AgencyStatus__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>In Active</stringValue>
            </value>
        </filters>
        <filters>
            <field>AgencyStatus__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>IsPartner</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>AgencyStatus__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Closed</stringValue>
            </value>
        </filters>
        <object>Account</object>
        <recordTriggerType>Update</recordTriggerType>
        <scheduledPaths>
            <connector>
                <targetReference>UpdateContactsAgentStatus</targetReference>
            </connector>
            <pathType>AsyncAfterCommit</pathType>
        </scheduledPaths>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
