    <assignments>
        <name>Blank_out_Discount_Fields</name>
        <label>Blank out Discount Fields</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>Loop_Quote_Line_Items.ECSS_DiscountAmount__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <numberValue>0.0</numberValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>Loop_Quote_Line_Items.ECSS_DiscountPercentage__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <numberValue>0.0</numberValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varR_CollectionQLI</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Loop_Quote_Line_Items</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Loop_Quote_Line_Items</targetReference>
        </connector>
    </assignments>
    <assignments>
        <name>Update_Percentage</name>
        <label>Update Percentage</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>Loop_Quote_Line_Items.Discount</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Loop_Quote_Line_Items.ECSS_DiscountPercentage__c</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>Loop_Quote_Line_Items.ECSS_DiscountAmount__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>DiscountAmount</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varR_CollectionQLI</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Loop_Quote_Line_Items</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Loop_Quote_Line_Items</targetReference>
        </connector>
    </assignments>
    <assignments>
        <name>Update_the_Amount</name>
        <label>Update the Amount</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>Loop_Quote_Line_Items.UnitPrice</assignToReference>
            <operator>Subtract</operator>
            <value>
                <elementReference>Loop_Quote_Line_Items.ECSS_DiscountAmount__c</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>Loop_Quote_Line_Items.ECSS_DiscountPercentage__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>DiscountPercent</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varR_CollectionQLI</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Loop_Quote_Line_Items</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Loop_Quote_Line_Items</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Check_Amount_or_Discount_Available</name>
        <label>Check Amount or Discount Available</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Update_Percentage</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Amount</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Loop_Quote_Line_Items.ECSS_DiscountType__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Amount</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_the_Amount</targetReference>
            </connector>
            <label>Amount</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_Quote_Status</name>
        <label>Check Quote Status</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Blank_out_Discount_Fields</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Rejected</defaultConnectorLabel>
        <rules>
            <name>Approved</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ECSS_DiscountStatus__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Approved</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Check_Amount_or_Discount_Available</targetReference>
            </connector>
            <label>Approved</label>
        </rules>
    </decisions>
    <description>This Flow updates the related Quote Line Items upon the approval of the Discount request on the Quote</description>
    <environments>Default</environments>
    <formulas>
        <name>BlankValue</name>
        <dataType>Number</dataType>
        <expression>NULLVALUE(NULL, NULL)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>DiscountAmount</name>
        <dataType>Number</dataType>
        <expression>({!Loop_Quote_Line_Items.ECSS_DiscountPercentage__c}/100)*{!Loop_Quote_Line_Items.ECSS_Amount__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>DiscountPercent</name>
        <dataType>Number</dataType>
        <expression>({!Loop_Quote_Line_Items.ECSS_DiscountAmount__c}/{!Loop_Quote_Line_Items.ECSS_Amount__c})*100</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>ECSS Update Quote Lines On Discount Approval {!$Flow.CurrentDateTime}</interviewLabel>
    <label>ECSS Update Quote Lines On Discount Approval</label>
    <loops>
        <name>Loop_Quote_Line_Items</name>
        <label>Loop Quote Line Items</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <collectionReference>Get_Related_Quote_Line_Items</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>Check_Quote_Status</targetReference>
        </nextValueConnector>
        <noMoreValuesConnector>
            <targetReference>Update_the_Quote</targetReference>
        </noMoreValuesConnector>
    </loops>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>Get_Related_Quote_Line_Items</name>
        <label>Get Related Quote Line Items</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Loop_Quote_Line_Items</targetReference>
        </connector>
        <filterLogic>1 AND (2 OR 3) AND (4 OR 5)</filterLogic>
        <filters>
            <field>QuoteId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <filters>
            <field>ECSS_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>TAF</stringValue>
            </value>
        </filters>
        <filters>
            <field>ECSS_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>RENT</stringValue>
            </value>
        </filters>
        <filters>
            <field>ECSS_DiscountAmount__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>ECSS_DiscountPercentage__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <getFirstRecordOnly>false</getFirstRecordOnly>
        <object>QuoteLineItem</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <name>Update_the_Quote</name>
        <label>Update the Quote</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputReference>varR_CollectionQLI</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Related_Quote_Line_Items</targetReference>
        </connector>
        <filterLogic>1 AND (2 OR 3)</filterLogic>
        <filters>
            <field>ECSS_DiscountStatus__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>ECSS_DiscountStatus__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Approved</stringValue>
            </value>
        </filters>
        <filters>
            <field>ECSS_DiscountStatus__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Rejected</stringValue>
            </value>
        </filters>
        <object>Quote</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <variables>
        <name>blankVariable</name>
