                <leftValueReference>$Record.RetrySendingtoBank__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.DirectDebitBank__c</leftValueReference>
