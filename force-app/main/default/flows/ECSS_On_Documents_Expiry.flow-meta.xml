    <assignments>
        <name>Assign_EmailAddress</name>
        <label>Assign EmailAddress</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>recipientEmails</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>$Record.Account__r.Owner.Email</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Send_Email_to_Owner</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Account_Check</name>
        <label>Account Check</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Send_Email_to_Owner</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Filled</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Account__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Account__r.ApprovalStatus__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Approved</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Acc_Status</targetReference>
            </connector>
            <label>Filled and</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>linkUrl</name>
        <dataType>String</dataType>
        <expression>LEFT($Api.Partner_Server_URL_370, FIND(&apos;/services&apos;, $Api.Partner_Server_URL_370) - 1) &amp; &apos;/lightning/n/Upload_Expired_Document/?c__recordId=&apos;&amp;{!$Record.Account__r.Id}</expression>
    </formulas>
    <interviewLabel>ECSS_On Documents Expiry {!$Flow.CurrentDateTime}</interviewLabel>
