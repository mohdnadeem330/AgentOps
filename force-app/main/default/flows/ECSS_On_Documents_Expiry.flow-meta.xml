    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <filterFormula>(
ISNEW() 
|| 
ISCHANGED({!$Record.ECSS_Expiry_Date__c})
)
&amp;&amp; NOT(ISBLANK({!$Record.ECSS_Expiry_Date__c}))</filterFormula>
        <object>Document__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <scheduledPaths>
